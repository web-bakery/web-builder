.header
  width: 100%
  padding: 50px
  color: var(--white)
  &-title
    font-size: 50px
    line-height: 1em
    margin: 20px 0
    font-weight: lighter
  &-content
    font-size: 16px
    margin-bottom: 50px
    font-weight: lighter
  &-image
    >img
      width 100%
  &,
  &.is-red
    background-image: linear-gradient(30deg, var(--red), darken(#F48489, 20%))
  &.is-black
    background-image: linear-gradient(30deg, var(--dark), darken(#0C2828, 20%))
  &.is-green
    background-image: linear-gradient(30deg, var(--green), darken(#8AC97F, 20%))
  &.is-blue
    background-image: linear-gradient(30deg, var(--primary), darken(#69BAE8, 20%))
  &.is-white
    background-image: linear-gradient(45deg, darken(#ffffff, 10%), var(--white))