.controller
    width: 100%
    padding: 100px 0
    background-color: var(--white)
    .controller-intro
        width: 900px
        margin: 0 auto
        display: flex
        flex-direction: column
        align-items: center
        label
            font-size: 32px
            font-weight: 800
            margin-bottom: 30px
        input
            background-color: var(--light)
            border-radius: 10px
            height: 50px
            width: 600px
            padding: 0 15px
            outline: none
            
        .controller-themes
            display: flex
            flex-direction: column
            align-items: center
            .controller-theme
                height: 100px
                width: 600px
                border-radius: 10px
                background-color: var(--light)
                margin-top: 30px
                font-weight: 800
                transition: all 200ms ease-in-out
                &:hover
                    background-color: var(--primary)
                    color: var(--white)
    .controller-panel
        position: fixed
        bottom: 50px
        right: 50px
        min-width: 100px
        background-color: var(--dark)
        border-radius: 100px
        display: flex
        justify-content: center
        align-items: center
        padding: 10px 5px
    .controller-button
        width: 40px
        height: 40px
        display: flex
        justify-content: center
        align-items: center
        background-color: var(--white_10)
        border-radius: 100%
        margin: 0 5px
        outline: none
        transition: var(--transition-200)
        &.is-red
            background-color: var(--red)
        &.is-blue
            background-color: var(--primary)
        &.is-green
            background-color: var(--green)
        &.is-red
            background-color: var(--red)
        &.is-rotated
            svg
                transform: rotate(45deg)
        svg 
            height: 20px
            width: 20px
            fill: var(--white)
            transition: var(--transition-200)